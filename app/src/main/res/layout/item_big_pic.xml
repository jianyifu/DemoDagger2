<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#33000000" />


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_below="@id/divider"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/img_mask"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignBottom="@id/iv_img"/>

    <TextView
        android:id="@+id/tv_img_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="这里是Img的title这里是Img的title这里是Img的title这里是Img的title这里是Img的title这里是Img的title这里是Img的title这里是Img的title"
        android:textColor="#ffffff"
        android:textSize="17sp" />


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/iv_img" />

    <TextView
        android:id="@+id/tv_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/tv_play"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
        android:textColor="#222222"
        android:textSize="17sp" />

    <ProgressBar
        android:id="@+id/pb_download"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_img"
        android:max="100"
        android:progress="0"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_img"
        android:gravity="center"
        android:text="直接玩"
        android:textColor="#222222"
        android:textSize="15sp" />

</RelativeLayout>